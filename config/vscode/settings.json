{
  // Editor
  "editor.fontFamily": "JetBrainsMono Nerd Font, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "keyword", "storage.type", "storage.modifier"],
        "settings": { "fontStyle": "italic" }
      }
    ]
  },
  "editor.lineHeight": 1.6,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.wordWrap": "off",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "selection",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.stickyScroll.enabled": true,
  "editor.copyWithSyntaxHighlighting": false,
  "richCopy.enable": false,
  "editor.inlineSuggest.enabled": true,
  "editor.quickSuggestions": {
    "strings": true
  },

  // Formatting
  "editor.formatOnSave": true,

  // Files
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    // System
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,

    // Dependencies
    "**/node_modules": true,
    "**/vendor": true,
    "**/.pnpm": true,

    // Build outputs
    "**/dist": true,
    "**/dist-electron": true,
    "**/build": true,
    "**/out": true,
    "**/target": true,
    "**/.output": true,

    // Framework caches
    "**/.next": true,
    "**/.nuxt": true,
    "**/.svelte-kit": true,
    "**/.angular": true,
    "**/.expo": true,
    "**/.turbo": true,
    "**/.vercel": true,
    "**/.netlify": true,

    // Test/coverage
    "**/coverage": true,
    "**/.nyc_output": true,

    // Caches
    "**/.cache": true,
    "**/.parcel-cache": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,

    // Infrastructure
    "**/.terraform": true,
    "**/.gradle": true,

    // Python virtual envs
    "**/venv": true,
    "**/.venv": true,

    // Generated
    "**/.tsbuildinfo": true
  },

  // Search
  "search.exclude": {
    // Dependencies
    "**/node_modules": true,
    "**/vendor": true,
    "**/.pnpm": true,

    // Lock files
    "**/pnpm-lock.yaml": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/bun.lockb": true,
    "**/Cargo.lock": true,
    "**/Gemfile.lock": true,
    "**/poetry.lock": true,
    "**/composer.lock": true,

    // Build outputs
    "**/dist": true,
    "**/dist-electron": true,
    "**/build": true,
    "**/out": true,
    "**/target": true,
    "**/.output": true,

    // Framework caches
    "**/.next": true,
    "**/.nuxt": true,
    "**/.svelte-kit": true,
    "**/.angular": true,
    "**/.expo": true,
    "**/.turbo": true,
    "**/.vercel": true,
    "**/.netlify": true,

    // Test/coverage
    "**/coverage": true,
    "**/.nyc_output": true,
    "**/__snapshots__": true,

    // Caches
    "**/.cache": true,
    "**/.parcel-cache": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,

    // Infrastructure
    "**/.terraform": true,
    "**/.gradle": true,

    // Python virtual envs
    "**/venv": true,
    "**/.venv": true,

    // Generated/minified
    "**/*.min.js": true,
    "**/*.min.css": true,
    "**/.tsbuildinfo": true,

    // Logs
    "**/logs": true,
    "**/*.log": true
  },

  // Terminal
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.smoothScrolling": true,

  // Workbench
  "workbench.colorTheme": "Neon Cyberpunk",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.tree.indent": 16,
  "workbench.sideBar.location": "left",

  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // TypeScript
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,

  // JavaScript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "relative",

  // Language-specific formatters
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.wordWrap": "on"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[shellscript]": {
    "editor.defaultFormatter": null
  },

  // Tailwind CSS
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },

  // Error Lens
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.excludeBySource": ["ts(80001)"],

  // GitLens
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,

  // Copilot
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },

  // Deno (disabled by default, enable per-workspace)
  "deno.enable": false,

  // Terraform
  "terraform.languageServer.enable": true,

  // Spell Checker
  "cSpell.enableFiletypes": ["markdown", "plaintext"],
  "cSpell.userWords": [
    "Aabb",
    "Acsenda",
    "contenteditable",
    "frametime",
    "frontmatter",
    "GLSL",
    "leecheneler",
    "letterboxing",
    "Lightmap",
    "overrider",
    "Shiki",
    "spritesheet",
    "Startable",
    "TABI",
    "tabirun",
    "Unminified",
    "unocss",
    "Unregisters",
    "Upserting",
    "webgl"
  ],

  // Telemetry
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "totalTypeScript.hideAllTips": true,
  "totalTypeScript.hideBasicTips": true,
  "chat.agent.maxRequests": 50,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:claude-opus-4.5",
  "diffEditor.ignoreTrimWhitespace": false,
  "chat.tools.terminal.autoApprove": {
    "pnpm": true,
    "git add": true,
    "git commit": true
  },
  "extensions.ignoreRecommendations": true,
  "workbench.secondarySideBar.defaultVisibility": "visible",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
