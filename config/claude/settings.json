{
  "additionalDirectories": [
    "~/projects"
  ],
  "mcpServers": {},
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(basename:*)",
      "Bash(cat:*)",
      "Bash(diff:*)",
      "Bash(dirname:*)",
      "Bash(du:*)",
      "Bash(env:*)",
      "Bash(file:*)",
      "Bash(find:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(realpath:*)",
      "Bash(stat:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(uname:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(xargs:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git restore:*)",
      "Bash(git checkout:*)",
      "Bash(git pull:*)",
      "Bash(git branch:*)",
      "Bash(git push:*)",
      "Bash(git rev-parse:*)",
      "Bash(gh:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(npm list:*)",
      "Bash(npm run:*)",
      "Bash(pnpm list:*)",
      "Bash(pnpm run:*)",
      "Bash(bun run:*)",
      "Bash(deno task:*)",
      "Bash(deno run:*)",
      "Bash(deno check:*)",
      "Bash(deno info:*)",
      "Bash(node --version:*)",
      "WebSearch",
      "WebFetch"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "alwaysThinkingEnabled": true,
  "autoApprove": [],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.dotfiles/config/claude/hooks/protect-files.py"
          }
        ]
      },
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.dotfiles/config/claude/hooks/pre-commit.py"
          }
        ]
      },
      {
        "matcher": "Bash(gh pr create:*)",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.dotfiles/config/claude/hooks/pre-pr.py"
          }
        ]
      },
      {
        "matcher": "Bash(git push:*)",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.dotfiles/config/claude/hooks/pre-push.py"
          }
        ]
      }
    ]
  }
}
