[user]
	name = Lee Cheneler
	email = leecheneler@users.noreply.github.com
	signingkey = ~/.ssh/id_ed25519.pub

[init]
	defaultBranch = main

[push]
	autoSetupRemote = true

[pull]
	rebase = true

[fetch]
	prune = true

[core]
	editor = code --wait

[commit]
	gpgsign = true

[gpg]
	format = ssh

[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers

[alias]
	s = status
	d = diff
	co = checkout
	br = branch
	cm = commit
	lg = log --oneline --graph --decorate
	bd = branch -D
